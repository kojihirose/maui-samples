<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFile.LogDataPage"
             Title="LogDataPage">
    <VerticalStackLayout
                Spacing="25"
                Padding="30,0"
                VerticalOptions="Center">
        <Label 
            Text="ログ出力"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="トレース開始" 
                Clicked="StartTraceClicked"
                />
        <Button Text="トレース終了" 
                Clicked="EndTraceClicked"
                />

        <Button Text="ログ出力" 
                Clicked="Button_Clicked"
                />

        <Button Text="ログチェック" 
                Clicked="LogCheckClicked"
                />
        <Label x:Name="message" />

    </VerticalStackLayout>
</ContentPage>