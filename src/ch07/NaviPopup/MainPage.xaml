<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NaviPopup.MainPage"
             Title="Home"
             >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                FontSize="24"
                Text="{ Binding Count, StringFormat='Count is {0}' }"
                HorizontalOptions="Center" />
            <Button
                Text="Count up"
                Clicked="OnCountClicked"
                HorizontalOptions="Center" />

            <Label
                FontSize="24"
                Text="{ Binding Message }"
                HorizontalOptions="Center" />

            <Button
                Text="Open FirstPage"
                Clicked="OnFirstClicked"
                HorizontalOptions="Center" />

            <Button
                Text="Open SecondPage"
                Clicked="OnSecondClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
