<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAccelerometer.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                HorizontalOptions="Center" />
            <Label
                Text="加速度センサー"
                FontSize="32"
                HorizontalOptions="Center" />
            <Switch IsToggled="{Binding Toggle}"  />
            <Label Text="{Binding Acce}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
