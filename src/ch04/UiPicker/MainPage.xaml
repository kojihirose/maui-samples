<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UiPicker.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Label
                Text="ピッカーで選択"
                FontSize="18"
                HorizontalOptions="Center" />

            <Picker
                x:Name="pick"
                SelectedIndexChanged="PickSelectedIndexChanged"
                FontSize="20" />

            <Label x:Name="labelResult"
                   HorizontalOptions="Center" 
                   FontSize="40"
                   />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
