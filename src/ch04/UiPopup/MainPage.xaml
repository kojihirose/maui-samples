<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UiPopup.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="ポップアップの表示"
                FontSize="18"
                HorizontalOptions="Center" />
            
            <Label
                x:Name="labelResult"
                Text="結果"
                HorizontalOptions="Center" />

            <Button
                Text="メッセージを表示"
                Clicked="OnPopupClicked"
                HorizontalOptions="Center" />

            <Button
                Text="YES/NOの選択"
                Clicked="OnYesNoClicked"
                HorizontalOptions="Center" />

            <Button
                Text="プロンプトの表示"
                Clicked="OnPromptClicked"
                HorizontalOptions="Center" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
