<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiSQLite.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiSQLite"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
            Title="Read"
            ContentTemplate="{DataTemplate local:ReadDataPage}"
            Route="ReadDataPage" />

        <ShellContent
            Title="ReadList"
            ContentTemplate="{DataTemplate local:FisheriesListPage}"
            Route="FisheriesListPage" />

        <ShellContent
            Title="Make"
            ContentTemplate="{DataTemplate local:MakeNewTablePage}"
            Route="MakeNewTablePage" />

        <ShellContent
            Title="Backup"
            ContentTemplate="{DataTemplate local:BackupPage}"
            Route="BackupPage" />
    </TabBar>
</Shell>
