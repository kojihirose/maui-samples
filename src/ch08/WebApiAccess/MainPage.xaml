<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApiAccess.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />


            <Button
                Text="Open Get Method"
                Clicked="OnGetMethodClicked"
                HorizontalOptions="Center" />

            <Button
                Text="Open Post Method"
                Clicked="OnPostMethodClicked"
                HorizontalOptions="Center" />

            <Button
                Text="Open Get Json"
                Clicked="OnGetJsonClicked"
                HorizontalOptions="Center" />

            <Button
                Text="Open Json List"
                Clicked="OnJsonListClicked"
                HorizontalOptions="Center" />

            <Button
                Text="Open Send Json"
                Clicked="OnSendJsonClicked"
                HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
