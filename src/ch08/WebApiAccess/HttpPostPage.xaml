<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApiAccess.HttpPostPage"
             Title="HttpPostPage">
    <ScrollView>
        <VerticalStackLayout
                    Spacing="25"
                    Padding="30,0"
                    VerticalOptions="Center">
            <Label 
                Text="HTTP Post Method"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Label Text="Subject" />
            <Entry Text="{Binding Item.Subject}" />
            <Label Text="Description" />
            <Entry Text="{Binding Item.Description}" />

            <Button 
                    Text="Issueを新規作成"
                    FontSize="18"
                    Clicked="Button_Clicked" />

            <Label Text="{Binding JsonText}" />



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>