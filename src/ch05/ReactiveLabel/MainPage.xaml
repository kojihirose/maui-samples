<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReactiveLabel.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="{Binding Hello.Value}"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label FontSize="24" Text="{Binding Title.Value}" />
            <Label FontSize="18" Text="{Binding Author.Value}" />
            <Label Text="{Binding Content.Value}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
